task :default => [
  :run
]


task :run => [ $goal, "mpi_machine_file" ] do
  sleep 3
  sh "mpiexec -np 2 -machinefile mpi_machine_file #{$goal}"
end



CLEAN.include($goal, "stdout", "mpi_machine_file")

